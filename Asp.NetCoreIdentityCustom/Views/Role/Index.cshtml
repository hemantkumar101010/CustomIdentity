@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">List of roles in our company</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
             <td>Name</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>
        }
    </tbody>

</table>

<a asp-action="Create" class=" w-100 btn btn-outline-dark  mt-3 ">Create New Role</a>


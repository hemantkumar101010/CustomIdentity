@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<hr />
<div class="row">
    <div  class="col-md-5 mx-auto">
        <h1 class="text-center mb-3">Create a role from here.</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <div class="form-group">
                   <label asp-for="Name" class="control-label"></label> 
                   <input asp-for="Name" placeholder="Enter the role name..." class="form-control" />
                   <span asp-validation-for="Name" class="text-danger"></span>
               </div>
               <br/>
               <div class="form-group">
                   <input type="submit" value="Create" class=" w-100 btn btn-outline-dark mb-1" />
                    <a asp-action="Index" class="w-100 btn btn-outline-primary">Back to List</a>
               </div>
        </form>
    </div>
 <br />
 </div>
 @section Scripts {  
   @{
       await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } 
 }
